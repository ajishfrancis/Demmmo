#!/bin/bash

# run original assemble script
/usr/local/s2i/assemble

# install appdynamics agent
curl -H "Accept: application/zip" https://codeload.github.com/dragonfly201270/agent/zip/master -o /opt/app-root/src/newrelic.zip

pushd /opt/app-root/src
unzip newrelic.zip
    pushd agent-master/
    mv newrelic/ ../
    popd
rm -rf agent-master/
rm -f newrelic.zip
popd
